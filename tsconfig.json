{
  "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "removeComments": true,
      "preserveConstEnums": true,
      "outDir": "./dist",
      "declaration": true,
      "target": "es5",
      "lib": [
          "es2015.promise",
          "es5",
          "dom"
      ]
  },
  "include": [
      "src/**/*",
      "examples/*.ts"
  ],
  "exclude": [
      "node_modules",
      "**/*.spec.ts"
  ]
}